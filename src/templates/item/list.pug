extends ../layout.pug

block body
  h1(class="main-title") Safe Auction SIRS
  h3
    a(href="/items/new") Add new item
  table(class="table table-striped table-inverse")
    thead
      tr
        th Id
        th Name
        th Description
        th Created
    tbody
      each item in items
        tr
          th
            a(href=`/items/${item.id}`)=item.id
          th= item.name
          th= item.description
          th= item.createdAt
